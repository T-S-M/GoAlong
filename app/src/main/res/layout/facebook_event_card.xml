<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/plan_cover_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="35dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/plan_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/plan_address_in_card"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/plan_cover_image" />

        <TextView
            android:id="@+id/plan_address_in_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/plan_cover_image"
            android:layout_marginLeft="2dp"
            android:padding="2dp"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/plan_date_time_in_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/plan_address_in_card"
            android:layout_marginLeft="2dp"
            android:padding="2dp"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent" />


    </RelativeLayout>

</android.support.v7.widget.CardView>