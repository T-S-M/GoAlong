<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="6dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#11954df7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/events_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:text="Events"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/more1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/events_text"
        android:layout_alignParentRight="true"
        android:text="+More..."
        android:textColor="@color/md_blue_600"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/events_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/events_text"
        android:visibility="invisible" />

    </RelativeLayout>

</android.support.v7.widget.CardView>