<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#6c368b"/>
            <stroke
                android:width="2dp"
                android:color="#5f2f7b"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#9651be"
                android:startColor="#764a8f"/>
            <stroke
                android:width="4dp"
                android:color="#6d338c"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>